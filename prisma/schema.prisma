generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      =  env("DATABASE_URL")
  relationMode = "prisma"
}


//  authentication models
enum UserRole {
  ADMIN
  USER
}

model User {
  id                    String                 @id @default(auto()) @map("_id") @db.ObjectId
  name                  String?                 @unique
  password              String?
  role                  UserRole               @default(USER)
  country              String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}